uses
  acerp.view.componentes.edits, acerp.view.components.interfaces;

{ TForm1 }

procedure TPagePessoas.CriaEdits;
begin
  var lMargem: TEditMargins;
  lMargem.Right := 10;

  lyt5.AddObject(
    TComponentEdit.New(Self)
      .Nome('company')
      .Enable(False)
      .Titulo('Company (disable)')
      .Alinhamento(TAlignLayout.Left)
      .Largura(300)
      .Margem(lMargem)
      .PlaceHolder('Company')
      .Build);

  lyt5.AddObject(
    TComponentEdit.New(Self)
      .Nome('email')
      .Titulo('Email adrress')
      .Alinhamento(TAlignLayout.Left)
      .Largura(300)
      .Margem(lMargem)
      .PlaceHolder('Email')
      .BackGroundColor($FFFFFFFF)
      .Build);

  lyt5.AddObject(
    TComponentEdit.New(Self)
      .Nome('username')
      .Titulo('Username')
      .Alinhamento(TAlignLayout.Left)
      .Largura(300)
      .Margem(lMargem)
      .PlaceHolder('Username')
      .BackGroundColor($FFFFFFFF)
      .Build);

  lyt6.AddObject(
    TComponentEdit.New(Self)
      .Nome('first')
      .Titulo('First Name')
      .Alinhamento(TAlignLayout.Left)
      .Largura(460)
      .Margem(lMargem)
      .PlaceHolder('First Name')
      .Build);

  lyt6.AddObject(
    TComponentEdit.New(Self)
      .Nome('last')
      .Titulo('Last Name')
      .Alinhamento(TAlignLayout.Left)
      .Largura(460)
      .Margem(lMargem)
      .PlaceHolder('Last Name')
      .Build);

  lyt7.AddObject(
    TComponentEdit.New(Self)
      .Nome('address')
      .Titulo('Adress')
      .Alinhamento(TAlignLayout.Left)
      .Largura(920)
      .Margem(lMargem)
      .PlaceHolder('Adress')
      .Build);

  lyt8.AddObject(
    TComponentEdit.New(Self)
      .Nome('city')
      .Titulo('City')
      .Alinhamento(TAlignLayout.Left)
      .Largura(300)
      .Margem(lMargem)
      .PlaceHolder('City')
      .Build);

  lyt8.AddObject(
    TComponentEdit.New(Self)
      .Nome('country')
      .Titulo('Country')
      .Alinhamento(TAlignLayout.Left)
      .Largura(300)
      .Margem(lMargem)
      .PlaceHolder('Country')
      .Build);

  lyt8.AddObject(
    TComponentEdit.New(Self)
      .Nome('postal')
      .Titulo('Postal Code')
      .Alinhamento(TAlignLayout.Left)
      .Largura(300)
      .Margem(lMargem)
      .PlaceHolder('Postal Code')
      .Build);

  lyt9.AddObject(
    TComponentEdit.New(Self)
      .Nome('about')
      .Titulo('About Me')
      .Alinhamento(TAlignLayout.Left)
      .Largura(920)
      .Margem(lMargem)
      .VertText(TTextAlign.Leading)
      .PlaceHolder('Tell me a little about you...')
      .Build);
end;

procedure TPagePessoas.MontarTexto;
begin
//  btnCancelarOp.Caption := 'Cancelar Operação ' + ''#13'' + ' (ESC)';
  lblNome.Text := 'Laura Luísa';
  lblNome.TextSettings.FontColor := $FFD8859A;
  lblDescricao.Text := 'I like the way you work it' + ''#13'' +
                    'No diggity' + ''#13'' + 'I wanna bag it up';
end;

function TPagePessoas.Render: TFMXObject;
begin
  CriaEdits;
  MontarTexto;
  Result := lytContainer;
end;

procedure TPagePessoas.UnRender;
begin

end;

end.
