function TPagePessoas.CorIcone(Value: string; Color: TAlphaColor): TPagePessoas;
begin
  Result := Self;
  TUtils.ResourceImage(Value, imgIcone1);
  TUtils.ImageColor(imgIcone1, Color);
end;

procedure TPagePessoas.CriaEdits;
begin
  var lMargem: TEditMargins;
  lMargem.Right := 10;

  lyt5.AddObject(
    TComponentEdit.New(Self)
      .Nome('ativo')
      .Titulo('Ativo')
      .Alinhamento(TAlignLayout.Left)
      .Largura(100)
      .Margem(lMargem)
      .PlaceHolder('Ativo')
      .Build);

  lyt5.AddObject(
    TComponentEdit.New(Self)
      .Nome('nome')
      .Titulo('Nome')
      .Alinhamento(TAlignLayout.Left)
      .Largura(600)
      .Margem(lMargem)
      .PlaceHolder('Nome')
      .Build);

  lyt5.AddObject(
    TComponentEdit.New(Self)
      .Nome('cpfcnpj')
      .Titulo('CPF')
      .Alinhamento(TAlignLayout.Left)
      .Largura(200)
      .Margem(lMargem)
      .PlaceHolder('CPF')
      .BackGroundColor($FFFFFFFF)
      .Build);

  lyt6.AddObject(
    TComponentEdit.New(Self)
      .Nome('telefone')
      .Titulo('Telefone')
      .Alinhamento(TAlignLayout.Left)
      .Largura(200)
      .Margem(lMargem)
      .PlaceHolder('Telefone')
      .Build);

  lyt6.AddObject(
    TComponentEdit.New(Self)
      .Nome('Email')
      .Titulo('E-mail')
      .Alinhamento(TAlignLayout.Left)
      .Largura(710)
      .Margem(lMargem)
      .PlaceHolder('E-mail')
      .Build);

  lyt7.AddObject(
    TComponentEdit.New(Self)
      .Nome('endereco')
      .Titulo('Endereço')
      .Alinhamento(TAlignLayout.Left)
      .Largura(600)
      .Margem(lMargem)
      .PlaceHolder('Endereço')
      .Build);

  lyt7.AddObject(
    TComponentEdit.New(Self)
      .Nome('complemento')
      .Titulo('Complemento')
      .Alinhamento(TAlignLayout.Left)
